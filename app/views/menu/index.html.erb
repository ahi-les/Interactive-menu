<h1><%= t('.title') %></h1>

<% @dishes_grouped_by_categories.each do |category, dish| %>
  <article class="card border border-0">
    <div class="card-body">
    	<h3><%= category %></h3>
      <% dish.each do |d| %>
        <article class="card"> 
    	    <div class="card-body p-1">
    	    	<div class="d-flex fw-semibold p-0">
    		    	<p class="me-3 fw-bold mb-1"><%= d.name %></p>
    		    	<p class="me-3 mb-1"><%= t('.Weight') %><%= d.units %> <%= d.measure.name %></p>
    		    	<p class="me-3 mb-1"><%= t('.Price') %><%= d.dish_price %> UAH</p>
              <%= link_to t('.show dish'), dish_path(dish), class: 'btn btn-info btn-sm position-absolute end-0' %>
    	    	</div>
    	    </div>
    	  </article>
      <% end %>  
    </div>
  </article>
<% end %>




